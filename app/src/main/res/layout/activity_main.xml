<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/amebg">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="178dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="176dp"
        android:fontFamily="monospace"
        android:text="@string/Menu"
        android:textAlignment="center"
        android:textColor="@color/caramel"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="138dp"
        android:layout_height="44dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="136dp"
        android:backgroundTint="@color/caramel"
        android:fontFamily="monospace"
        android:scaleX="2"
        android:scaleY="2"
        android:text="@string/Act_3"
        android:textAlignment="center"
        android:textColor="@color/amebg"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        tools:ignore="SmallSP" />

    <Button
        android:id="@+id/button"
        android:layout_width="138dp"
        android:layout_height="44dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="136dp"
        android:backgroundTint="@color/caramel"
        android:fontFamily="monospace"
        android:scaleX="2"
        android:scaleY="2"
        android:text="@string/Act_1"
        android:textAlignment="center"
        android:textColor="@color/amebg"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        tools:ignore="SmallSP" />

    <Button
        android:id="@+id/button4"
        android:layout_width="138dp"
        android:layout_height="44dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="136dp"
        android:backgroundTint="@color/caramel"
        android:fontFamily="monospace"
        android:scaleX="2"
        android:scaleY="2"
        android:text="@string/Ex_1"
        android:textAlignment="center"
        android:textColor="@color/amebg"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="138dp"
        android:layout_height="44dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="136dp"
        android:backgroundTint="@color/caramel"
        android:fontFamily="monospace"
        android:scaleX="2"
        android:scaleY="2"
        android:text="@string/Act_2"
        android:textAlignment="center"
        android:textColor="@color/amebg"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:ignore="SmallSP" />

    <Button
        android:id="@+id/button6"
        android:layout_width="138dp"
        android:layout_height="44dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="136dp"
        android:backgroundTint="@color/caramel"
        android:fontFamily="monospace"
        android:scaleX="2"
        android:scaleY="2"
        android:text="@string/Hello_world"
        android:textAlignment="center"
        android:textColor="@color/amebg"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>